datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Note {
  content     String?
  createdAt   DateTime  @default(now())
  createdDate DateTime?
  id          String    @id @default(cuid())
  trip        Trip?     @relation(fields: [tripId], references: [id])
  tripId      String?
  updatedAt   DateTime  @updatedAt
}

model Trip {
  createdAt   DateTime   @default(now())
  description String?
  destination String?
  endDate     DateTime?
  id          String     @id @default(cuid())
  locations   Location[]
  notes       Note[]
  startDate   DateTime?
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  userId      String?
}

model Location {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  latitude  Float?
  longitude Float?
  name      String?
  trip      Trip?    @relation(fields: [tripId], references: [id])
  tripId    String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  trips     Trip[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}
